<% content_for :title do %>
  <%= t('.title') %>
<% end %>

<div class="border border-primary-c">
  <h2><%= t('.sign_in') %></h2>

  <%= form_with(model: resource, scope: resource_name, url: session_path(resource_name), local: true) do |f| %>
    <%= render "users/shared/error_messages", model: resource %>

    <div class="form-group row">
      <%= f.label :email, t('activerecord.attributes.user.email'), class: "col-sm-2 col-form-label" %>
      <div class="col-sm-5">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control border-dark" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :password, t('activerecord.attributes.user.password'), class: "col-sm-2 col-form-label" %>
      <div class="col-sm-5">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control border-dark" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group row">
        <div class="col-sm-5">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, t('activerecord.attributes.user.remember_me') %>
        </div>
      </div>
    <% end %>

    <div class="mt-5">
      <button type="submit" class="btn btn-primary btn-lg"><%= t('.sign_in') %></button>
    </div>

  <% end %>
</div>

<%= render "users/shared/links" %>
